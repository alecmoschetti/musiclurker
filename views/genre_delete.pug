extends catalog 
block category
    div.page_title
        h2 #{title}: #{genre.name}
    if albums.length 
        section.delete_others_message
            p.warning Delete or change the following albums before attempting to delete this genre.
            h3 Albums 
            div
                ul.delete_albums_list 
                    each album in albums 
                        li 
                            a(href=album.url) #{album.title}
    else 
        p Do you really want to delete this Genre?
        form(method='POST' action='')
            input#genreid(type='hidden' name='genreid' required='true' value=genre._id)
            label(for="admin_password") Admin password: 
            input#admin_password(type='password' name='admin_password' required='true')
            button(type='submit') Delete